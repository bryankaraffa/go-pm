# Example configuration file for go-pm
# This file shows all available configuration options
# Copy this file to config.yaml (or config.json/config.toml) and modify as needed

# Base directory for documentation (default: "wiki")
docs_dir: "docs"

# Directory containing work item templates (default: "wiki/work-items/templates")
templates_dir: "docs/templates"

# Directory for active work items (default: "wiki/work-items/backlog")
backlog_dir: "docs/backlog"

# Directory for completed/archived work items (default: "wiki/work-items/completed")
completed_dir: "docs/completed"

# Number of days before showing phase timeout warnings (default: 7)
phase_timeout_days: 7

# Whether to automatically assign agents to execution phase (default: true)
auto_assign_agent: true

# Whether to use only external templates (ignore embedded templates) (default: false)
use_external_templates_only: false